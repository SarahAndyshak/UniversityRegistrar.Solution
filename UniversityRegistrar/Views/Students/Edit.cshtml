@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Edit</h2>

<h4>Edit this Student: @Html.DisplayFor(model => model.StudentName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.LabelFor(model => model.StudentName)
  @Html.EditorFor(model => model.StudentName)
  @Html.LabelFor(model => model.EnrollmentDate, "Enrollment Date")
  @Html.TextBoxFor(model => model.EnrollmentDate, new { @class = "form-control", type = "datetime-local" })

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>
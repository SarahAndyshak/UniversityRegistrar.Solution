@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Add a course</h2>

<h4>Add this student to a course: @Html.DisplayFor(model => model.StudentName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")
    @* @Html.Label("student")
    @Html.DropDownList("StudentId") *@

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>
